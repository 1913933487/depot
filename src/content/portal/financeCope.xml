<content>
    <div id="page-title">
         <h1 class="page-header text-overflow">财务管理</h1>

    </div>
    <div id="page-content">
        <div class="row">
            <div class="col-md-2 col-lg-3"></div>
            <div class="panel  col-md-8 col-lg-6">
                <div class="panel-heading">
                     <h3 class="panel-title">应付</h3>

                </div>
                <form>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-4 col-xs-12  col-md-4">
                                <div class="form-group">
                                    <label class="control-label">业务类型</label>
                                    <select class="form-control selectpicker">
                                        <option>现金</option>
                                        <option>借入</option>
                                        <option>收押金</option>
                                    </select>
                                </div>
                            </div>
                            <div id="demo-dp-component" class="col-sm-4 col-xs-12 col-md-4">
                                <div class="form-group date">
                                    <label class="control-label">单据日期</label>
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="col-sm-4 col-xs-12 col-md-4">
                                <div class="form-group">
                                    <label class="control-label">单据号</label>
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 col-xs-12 col-md-4">
                                <div class="form-group">
                                    <label class="control-label">往来单位</label>
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="col-sm-4 col-xs-12 col-md-4">
                                <div class="form-group">
                                    <label class="control-label">业务部门</label>
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="col-sm-4 col-xs-12 col-md-4">
                                <div class="form-group">
                                    <label class="control-label">业务员</label>
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 col-xs-12 col-md-4">
                                <div class="form-group">
                                    <label class="control-label">经手人</label>
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="panel-body">
                    <table data-toggle="table" data-url="data/bs-table.json" data-search="true" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-sort-name="id" data-page-list="[5, 10, 20]" data-page-size="5" data-pagination="true" data-show-pagination-switch="true">
                        <thead>
                            <tr>
                                <th data-field="account" data-align="center" data-sortable="true" data-formatter="invoiceFormatter">结算账户</th>
                                <th data-field="receiptAmount" data-align="center" data-sortable="true">收款金额</th>
                                <th data-field="settlementMethod" data-align="center" data-sortable="true" data-formatter="dateFormatter">结算方式</th>
                                <th data-field="settlementNumber" data-align="center" data-sortable="true" data-sorter="priceSorter">结算号</th>
                                <th data-field="remark" data-align="center" data-sortable="true" data-formatter="statusFormatter">备注</th>
                            </tr>
                        </thead>
                    </table>
                    <form>
                        <div class="col-xs-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label class="control-label">备注</label>
                                <textarea class="form-control" style="resize:none" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="panel">
                    <!--Accordion title-->
                    <div class="panel-heading">
                         <h4 class="panel-title">
					                         <div class="demo-icon"><i class="ion-chevron-down"></i><a data-parent="#accordion" data-toggle="collapse" href="#collapseOne">更多信息</a></div>
					                    </h4>

                    </div>
                    <!--Accordion content-->
                    <div class="panel-collapse collapse in" id="collapseOne">
                        <div class="panel-body">
                            <form>
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-sm-4 col-xs-12  col-md-4">
                                            <div id="demo-dp-component3">
                                                <div class="form-group date">
                                                    <label class="control-label">制单人</label>
                                                    <input type="text" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-4 col-xs-12 col-md-4">
                                            <div class="form-group">
                                                <label class="control-label">创建时间</label>
                                                <input type="text" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-sm-4 col-xs-12 col-md-4">
                                            <div class="form-group">
                                                <label class="control-label">修改人</label>
                                                <input type="text" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4 col-xs-12 col-md-4">
                                            <div class="form-group">
                                                <label class="control-label">修改时间</label>
                                                <input type="text" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-sm-4 col-xs-12 col-md-4">
                                            <div class="form-group">
                                                <label class="control-label">审核人</label>
                                                <input type="text" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-sm-4 col-xs-12 col-md-4">
                                            <div class="form-group">
                                                <label class="control-label">审核时间</label>
                                                <input type="text" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4 col-xs-12 col-md-4">
                                            <div class="form-group">
                                                <label class="control-label">作废人</label>
                                                <input type="text" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-sm-4 col-xs-12 col-md-4">
                                            <div class="form-group">
                                                <label class="control-label">作废时间</label>
                                                <input type="text" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</content>