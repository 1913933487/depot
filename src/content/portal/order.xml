<content>
    <div id="page-title">
         <h1 class="page-header text-overflow">订货单</h1>

        <div class="searchbox">
            <div class="input-group custom-search-form">
                <input type="text" class="form-control" placeholder="Search.." /> <span class="input-group-btn">
                                    <button class="text-muted" type="button"><i class="demo-pli-magnifi-glass"></i>
                                    </button>
                                </span>
            </div>
        </div>
    </div>
    <ol class="breadcrumb">
        <li> <a href="index">首页</a>

        </li>
        <li class="active">订货单</li>
    </ol>
    <div id="page-content">
        <div class="panel">
            <div class="panel-heading">
                 <h3 class="panel-title">订货单列表</h3>
            </div>
            <div class="panel-body">
                <table data-toggle="table" data-url="data/bs-table.json" data-search="true" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-sort-name="id" data-page-list="[5, 10, 20]" data-page-size="5" data-pagination="true" data-show-pagination-switch="true">
                    <thead>
                        <tr>
                            <th data-field="orderId" data-align="center" data-sortable="true" data-formatter="invoiceFormatter">订单号</th>
                            <th data-field="orderTime" data-align="center" data-sortable="true">下单时间</th>
                            <th data-field="dealerName" data-align="center" data-sortable="true" data-formatter="dateFormatter">经销商名称</th>
                            <th data-field="amount" data-align="center" data-sortable="true" data-sorter="priceSorter">金额</th>
                            <th data-field="ship" data-align="center" data-sortable="true" data-formatter="statusFormatter">出库/发货</th>
                            <th data-field="status" data-align="center" data-sortable="true" data-formatter="trackFormatter">状态</th>
                            <th data-field="priceStatus" data-align="center" data-sortable="true" data-formatter="trackFormatter">付款状态</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</content>